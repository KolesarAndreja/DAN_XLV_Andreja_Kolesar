<Window x:Class="DAN_XLV.View.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAN_XLV.View"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Add new product"
                Command="{Binding addNewEmployee, UpdateSourceTrigger=PropertyChanged}"
                HorizontalAlignment="Left"
                Height="25"
                Margin="80,15,0,0"
                VerticalAlignment="Top"
                Width="132" />
        <Label Content="LIST OF ALL PRODUCTS:"
                   HorizontalAlignment="Left"
                   Margin="80,59,0,0"
                   VerticalAlignment="Top"
                   Width="165"
                   FontWeight="Bold" />
        <DataGrid x:Name="MenuGrid"
                  AutoGenerateColumns="False"
                  EnableRowVirtualization="True"
                  ItemsSource="{Binding menuList, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding pizza, UpdateSourceTrigger=PropertyChanged}"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  HorizontalGridLinesBrush="Black"
                  BorderBrush="Black"
                  Foreground="Black"
                  FontWeight="Bold"
                  Margin="80,90,570,309">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pizza"
                                        Binding="{Binding dishName}" />
                <DataGridTextColumn Header="Price (rsd)"
                                        Binding="{Binding price}" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnOrder"
                                        Content="Order"
                                        Visibility="{Binding DataContext.btnToOrder, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, UpdateSourceTrigger=PropertyChanged}"
                                        Command="{Binding DataContext.orderPizza, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, UpdateSourceTrigger=PropertyChanged}"
                                        Margin="4"
                                        FontWeight="Bold" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Log out"
                    Command="{Binding close, UpdateSourceTrigger=PropertyChanged}"
                    HorizontalAlignment="Left"
                    Margin="560,15,0,0"
                    VerticalAlignment="Top"
                    Width="75" RenderTransformOrigin="-0.667,0.25" Height="25" />

    </Grid>
</Window>
